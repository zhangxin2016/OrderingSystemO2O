<script type="text/javascript" src="js/echarts.js"></script>
<script type="text/javascript" >

    $.ajax({
        url:"<%=path%>findFoodChart.html",
        type:"get",
        dataType:"json",
        data:{ },
        success:function(data){
            //var aaa = data.replace('[','').replace(']','')
            var aa = new Array(data.length);
            var bb = new Array(data.length);
            var cc = new Array(data.length);
			for(var a = 0;a<data.length;a++){
					aa[a]=data[a].fname;
					bb[a]=data[a].coll;
					cc[a]=data[a].sal
			}
            var myChart = echarts.init(document.getElementById('container'));
            option = {
                title: {
                    text: '菜品销售收藏图'
                },
                tooltip : {
                    trigger: 'axis',
                    axisPointer: {
                        type: 'cross',
                        label: {
                            backgroundColor: '#6a7985'
                        }
                    }
                },
                legend: {
                    data:['销售次数','收藏次数']
                },
                toolbox: {
                    feature: {
                        saveAsImage: {}
                    }
                },
                grid: {
                    left: '3%',
                    right: '4%',
                    bottom: '3%',
                    containLabel: true
                },
                xAxis : [
                    {
                        type : 'category',
                        boundaryGap : false,
                        data : aa
                    }
                ],
                yAxis : [
                    {
                        type : 'value'
                    }
                ],
                series : [
                    {
                        name:'收藏次数',
                        type:'line',
                        stack: '总量',
                        areaStyle: {normal: {}},
                        data:bb
                    },
                    {
                        name:'销售次数',
                        type:'line',
                        stack: '总量',
                        label: {
                            normal: {
                                show: true,
                                position: 'top'
                            }
                        },
                        areaStyle: {normal: {}},
                        data:cc
                    }
                ]
            };
            myChart.setOption(option);
        }
    });

</script>
